<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Back Button placed at the top -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="goBack" /> <!-- Calls goBack() method on click -->

    <!-- The existing button for opening accessibilities -->
    <Button
        android:id="@+id/btnOpenAccessibilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Accessibilities"
        android:padding="12dp" />

    <!-- ScrollView to show content below -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/tvIdiomaDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:fontFamily="monospace"
            android:textIsSelectable="true"
            android:scrollbars="vertical"
            android:textSize="14sp"
            android:text="(Loadingâ€¦)" />
    </ScrollView>
</LinearLayout>
