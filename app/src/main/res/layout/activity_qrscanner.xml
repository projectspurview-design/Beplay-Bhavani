<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/qrRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/qrTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Scan to Unlock"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle / instructions -->
    <TextView
        android:id="@+id/qrSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Use the QR issued by your admin. After a valid scan, youâ€™ll be routed to the app."
        android:textSize="14sp"
        android:alpha="0.9"
        android:lineSpacingExtra="2dp"
        app:layout_constraintTop_toBottomOf="@id/qrTitle"
        app:layout_constraintStart_toStartOf="@id/qrTitle"
        app:layout_constraintEnd_toEndOf="@id/qrTitle"
        android:layout_marginTop="8dp"/>

    <!-- Status / errors -->
    <TextView
        android:id="@+id/qrStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="14sp"
        android:textColor="#D32F2F"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/qrSubtitle"
        app:layout_constraintStart_toStartOf="@id/qrSubtitle"
        app:layout_constraintEnd_toEndOf="@id/qrSubtitle"
        android:layout_marginTop="12dp"/>

    <!-- Progress -->
    <ProgressBar
        android:id="@+id/qrProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/qrStatus"
        app:layout_constraintStart_toStartOf="@id/qrStatus"
        android:layout_marginTop="12dp"/>

    <!-- Big primary button -->
    <Button
        android:id="@+id/btnScanNow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Scan QR Code"
        android:textAllCaps="false"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:layout_constraintStart_toStartOf="@id/qrSubtitle"
        app:layout_constraintEnd_toEndOf="@id/qrSubtitle"
        app:layout_constraintTop_toBottomOf="@id/qrProgress"
        android:layout_marginTop="24dp"/>

    <!-- Secondary: Help / What is this? -->
    <Button
        android:id="@+id/btnHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need help?"
        android:textAllCaps="false"
        style="?attr/borderlessButtonStyle"
        app:layout_constraintTop_toBottomOf="@id/btnScanNow"
        app:layout_constraintStart_toStartOf="@id/btnScanNow"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
