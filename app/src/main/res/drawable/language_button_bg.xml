<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused (DPAD / current selection) -->
    <item
        android:state_focused="true"
        android:drawable="@drawable/language_button_bg_selected" />

    <!-- Pressed (tap / enter) -->
    <item
        android:state_pressed="true"
        android:drawable="@drawable/language_button_bg_selected" />

    <!-- Default -->
    <item android:drawable="@drawable/language_button_bg_default" />
</selector>
