<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#50000000"> <!-- Dark gray ripple (31% opacity) -->
    <item>
        <shape android:shape="rectangle">
            <!-- Keep the light grey background -->
            <solid android:color="#F0F0F0" />

            <!-- Double border effect -->
            <stroke
                android:width="1dp"
                android:color="#B0B0B0" /> <!-- Outer border -->
            <stroke
                android:width="1dp"
                android:color="#FFFFFF"
                android:dashWidth="1dp"
                android:dashGap="1dp" /> <!-- Inner dashed border -->

            <!-- Shadow effect -->
            <corners android:radius="4dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
</ripple>