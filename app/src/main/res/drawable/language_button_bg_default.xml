<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners android:radius="8dp" />

    <!-- Grey glossy gradient -->
    <gradient
        android:angle="270"
        android:startColor="#A0B1C5"
        android:centerColor="#DDE3EE"
        android:endColor="#8A93A3" />

    <!-- Dark border -->
    <stroke
        android:width="1dp"
        android:color="#3B4250" />
</shape>
